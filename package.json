{
  "name": "anitrack",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo watch dev",
    "start": "turbo start",
    "web:dev": "turbo watch dev --filter=web",
    "api:dev": "turbo watch dev --filter=api-go",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^3",
    "turbo": "^2.0.11"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@9.6.0"
}
